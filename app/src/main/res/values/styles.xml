<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="userNameTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/user_profile_name_textSize</item>

    </style>

    <style name="userInfoClickableFieldTextStyle">
        <item name="android:textSize">@dimen/user_info_clickable_field_textSize</item>
        <item name="android:textColor">@color/colorUserInfoClickableFieldColor</item>
        <item name="android:textColorLink">@color/colorUserInfoClickableFieldColor</item>
    </style>

    <style name="mainPrimaryButtonStyle">
        <item name="android:background">@drawable/main_primary_button_background_selector</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="userInfoLoadingMessageTextStyle"></style>

</resources>
